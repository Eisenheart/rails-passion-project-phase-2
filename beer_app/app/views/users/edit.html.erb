<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>


<%= form_for :user , url: user_path(params[:id]), method: :put do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
    <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :hometown %><br>
    <%= f.text_area :hometown %>
  </p>

  <p>
    <%= f.label :country %><br>
    <%= f.text_area :country %>
  </p>

  <p>
    <%= f.submit "Sign up" %>
  </p>
<% end %>
