


<%= form_for :user , url: users_path, method: :post do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>
    <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :hometown %><br>
    <%= f.text_area :hometown %>
  </p>

  <p>
    <%= f.label :country %><br>
    <%= f.text_area :country %>
  </p>

  <p>
    <%= f.submit "Sign up" %>
  </p>
<% end %>
